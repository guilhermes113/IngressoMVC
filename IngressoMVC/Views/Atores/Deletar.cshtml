@model Ator
@{
  ViewData["Title"] = "Deletar Ator";
}
<div class="row text">
    <div class="col-md-6 offset-2">
        <p>
            <h2>Deletar Ator </h2>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="ConfirmaDeletar" asp-route-id="@Model.Id">

                    <div class="form-group">
                        <label asp-for="Id" >ID :</label>
                        <input asp-for="Id" class="col-md-2" disabled/>
                    </div>
                    <div class="col-md-4">
                        <img class="img-thumbnail" src="@Model.FotoPerfilURL" />

                    </div>
                    <div class="col-md-10">
                        <h1>@Model.Nome</h1>
                        <p>@Model.Bio</p>
                        
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Deletar" class="btn btn-outline-danger float-right" />
                        <a class="btn btn-outline-success" asp-action="Index">Listar Todos</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
